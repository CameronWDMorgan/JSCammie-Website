<style>
    .hamburgerContainer {
        display: none;
    }

    .hamburgerMenu {
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        width: 30px;
        height: 30px;
        cursor: pointer;
    }

    .hamburgerLine {
        width: 100%;
        height: 3px;
        background-color: white;
    }

    .sideMenu {
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        width: 0;
        background-color: var(--background-colour);
        overflow-x: hidden;
        transition: 0.5s;
        z-index: 99;
    }

    .sideMenu.show {
        width: 250px;
    }

    .sideLink {
        display: block;
        color: white;
        padding: 16px;
        text-decoration: none;
        transition: 0.3s;
    }

    .sideLink:hover {
        background-color: var(--highlight-colour);
    }

    .sideLink:active {
        background-color: var(--highlight-colour);
    }

    @media screen and (max-width: 900px) {
        .hamburgerContainer {
            display: block;
        }

        .sideMenu {
            width: 200px;
        }

        .sideLink {
            padding: 12px;
        }
    }

    @media screen and (max-width: 600px) {
        .sideMenu {
            width: 150px;
        }

        .sideLink {
            padding: 8px;
        }
    }
</style>

