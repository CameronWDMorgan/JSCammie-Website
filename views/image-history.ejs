                    loras: "<%=imageData.loras%>",
                    lora_strengths: "<%=imageData.lora_strengths%>",
                    steps: "<%=imageData.steps%>",
                    cfg: "<%=imageData.cfg%>",
                    seed: "<%=imageData.seed%>",
                    image_url: "<%=imageData.image_url%>"
                };
            <% }); %>
        </script>

