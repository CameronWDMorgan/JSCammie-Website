<!-- setup basic html template with metadata etc: -->
<html>
<head>
    <title>Contests | JSCammie.com</title>
    <link rel='stylesheet' href='/style.css'/>

    
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-K3KJJKS1R4"></script>
    <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-K3KJJKS1R4');
    </script>

    <!-- discord web embed:  -->
    <meta property="og:title" content="Contests | JSCammie.com" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://jscammie.com" />

</head>
<body>

    <!-- get partials/_navigation: -->
    <%- include('../partials/_navigation') %>

    <style>
        .screenLine {
            width: 100%;
            height: 4px;
            background-color: #ffffff;
            margin: 10px 0px;
            border-radius: 10px;
        }
    </style>

    <style>
        a {
            color: #be6aff;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
    </style>

    <div class="center-fully-no-flex" style="margin-bottom: 3rem;">
        <%- include('../partials/_bannerAdvert') %>
    </div>

    <div class="round-frosted page-content mw50-dynamic" style="padding: 40px; justify-content: center;">
        <h1>JSCammie Contests</h1>
        <p>Be sure to read through the guidelines listed below!</p>
        <%- contestGuidelines %>
        <% contests.forEach(function(contestInfo) { %>
            <div class="screenLine"></div>
            <%- contestInfo %>
        <% }); %>

    </div>

    <!-- get partials/_footer: -->
    <%- include('../partials/_footer') %>
    
</body>
</html>