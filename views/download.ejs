        <div class="download-buttons">
            <!-- For Windows -->
            <div class="download-button">
                <a href="/download/jscammie-win32-x64.zip" download>
                    <button class="button">
                        <img src="/download/windows.png" alt="Windows" class="platform-icon"/>
